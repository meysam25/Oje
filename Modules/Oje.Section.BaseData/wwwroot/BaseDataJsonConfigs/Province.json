{
  "panels": [
    {
      "grids": [
        {
          "id": "baseDataProvinceGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('baseDataProvinceAddGridModal', this)",
              "type": "add",
              "modalId": "baseDataProvinceAddGridModal"
            }
          ],
          "exportToExcelUrl": "/BaseData/Province/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/BaseData/Province/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "baseDataProvinceEditModal",
                "url": "/BaseData/Province/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/BaseData/Province/GetById\\', \\'baseDataProvinceEditModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/BaseData/Province/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "cityCount",
              "caption": "تعداد شهر",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "",
          "id": "baseDataProvinceAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "names": {
                "lat": "mapLat",
                "lon": "mapLon",
                "zoom": "mapZoom"
              },
              "width": "100%",
              "height": "312px",
              "type": "map",
              "label": "موقعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'baseDataProvinceGrid', '/BaseData/Province/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "",
          "id": "baseDataProvinceEditModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "names": {
                "lat": "mapLat",
                "lon": "mapLon",
                "zoom": "mapZoom"
              },
              "width": "100%",
              "height": "312px",
              "type": "map",
              "label": "موقعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'baseDataProvinceGrid', '/BaseData/Province/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}