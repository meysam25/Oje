{
  "panels": [
    {
      "grids": [
        {
          "id": "userGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('AddGridModal', this)", "type": "add", "modalId": "AddGridModal"
            }
          ],
          "exportToExcelUrl": "/BaseData/SiteSetting/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/BaseData/SiteSetting/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "editRoleModal",
                "url": "/BaseData/SiteSetting/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/BaseData/SiteSetting/GetById\\', \\'editRoleModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/BaseData/SiteSetting/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "website",
              "caption": "سایت",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "userfirstname",
              "caption": "نام",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "userlastname",
              "caption": "نام خانوادگی",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "modal-xl",
          "id": "AddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "websiteUrl",
              "type": "text",
              "label": "وب سایت",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "panelUrl",
              "type": "text",
              "label": "وب سایت پنل",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "userId",
              "type": "dropDown2",
              "textfield": "text",
              "valuefield": "id",
              "dataurl": "/BaseData/SiteSetting/GetUserList",
              "label": "کاربر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "isHttps",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/YesOrNo",
              "label": "امن"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'userGrid', '/BaseData/SiteSetting/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "modal-xl",
          "id": "editRoleModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "websiteUrl",
              "type": "text",
              "label": "وب سایت",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "panelUrl",
              "type": "text",
              "label": "وب سایت پنل",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "userId",
              "type": "dropDown2",
              "textfield": "text",
              "valuefield": "id",
              "dataurl": "/BaseData/SiteSetting/GetUserList",
              "label": "کاربر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12",
              "name": "isHttps",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/YesOrNo",
              "label": "امن"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'userGrid', '/BaseData/SiteSetting/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}