{
    "panels": [
        {
            "grids": [
                {
                    "id": "userGrid",
                    "topActions": [
                        {
                            "title": "افزودن",
                            "onClick": "showModal('AddGridModal', this)",
                            "type": "add",
                            "modalId": "AddGridModal"
                        }
                    ],
                    "exportToExcelUrl": "/BaseData/City/Export",
                    "showColumnConfigButton": true,
                    "actions": {
                        "delete": {
                            "url": "/BaseData/City/Delete"
                        },
                        "cActions": [
                            {
                                "type": "edit",
                                "icon": "fa-pen",
                                "prop": "id",
                                "modalId": "editRoleModal",
                                "url": "/BaseData/City/GetById",
                                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/BaseData/City/GetById\\', \\'editRoleModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
                            }
                        ]
                    },
                    "key": "id",
                    "url": "/BaseData/City/GetList",
                    "itemPerPage": 10,
                    "schema": {
                        "data": "data",
                        "total": "total"
                    },
                    "columns": [
                        {
                            "field": "row",
                            "caption": "ردیف",
                            "width": "50px",
                            "textAlign": "center"
                        },
                        {
                            "field": "title",
                            "caption": "عنوان",
                            "search": {
                                "searchType": "text"
                            }
                        },
                        {
                            "field": "province",
                            "caption": "استان",
                            "search": {
                                "searchType": "dropdown",
                                "url": "/BaseData/City/GetProvinceList",
                                "textField": "title",
                                "valueField": "id"
                            }
                        },
                        {
                            "field": "isActive",
                            "caption": "وضعیت",
                            "search": {
                                "searchType": "dropdown",
                                "url": "/Core/BaseData/Get/IsActive",
                                "textField": "title",
                                "valueField": "id"
                            }
                        }
                    ]
                }
            ],
            "moduals": [
                {
                    "class": "",
                    "id": "AddGridModal",
                    "title": "افزودن",
                    "ctrls": [
                        {
                            "name": "id",
                            "type": "hidden"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "title",
                            "type": "text",
                            "label": "عنوان",
                            "isRequired": true
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "provinceId",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/BaseData/City/GetProvinceList",
                            "label": "استان"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "isActive",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/Core/BaseData/Get/IsActive",
                            "label": "وضعیت"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "fireLevel",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/Core/BaseData/Get/FireDangerGroupLevelType",
                            "label": "سطح خطر آتش سوزی"
                        }
                    ],
                    "actions": [
                        {
                            "title": "بستن",
                            "onClick": "closeThisModal(this)",
                            "class": "btn-secondary"
                        },
                        {
                            "title": "دخیره",
                            "onClick": "postModalData(this, 'userGrid', '/BaseData/City/Create')",
                            "class": "btn-primary"
                        }
                    ]
                },
                {
                    "class": "",
                    "id": "editRoleModal",
                    "title": "ویرایش",
                    "ctrls": [
                        {
                            "name": "id",
                            "type": "hidden"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "title",
                            "type": "text",
                            "label": "عنوان",
                            "isRequired": true
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "provinceId",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/BaseData/City/GetProvinceList",
                            "label": "استان"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "isActive",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/Core/BaseData/Get/IsActive",
                            "label": "وضعیت"
                        },
                        {
                            "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                            "name": "fireLevel",
                            "type": "dropDown",
                            "textfield": "title",
                            "valuefield": "id",
                            "dataurl": "/Core/BaseData/Get/FireDangerGroupLevelType",
                            "label": "سطح خطر آتش سوزی"
                        }
                    ],
                    "actions": [
                        {
                            "title": "بستن",
                            "onClick": "closeThisModal(this)",
                            "class": "btn-secondary"
                        },
                        {
                            "title": "دخیره",
                            "onClick": "postModalData(this, 'userGrid', '/BaseData/City/Update')",
                            "class": "btn-primary"
                        }
                    ]
                }
            ]
        }
    ]
}