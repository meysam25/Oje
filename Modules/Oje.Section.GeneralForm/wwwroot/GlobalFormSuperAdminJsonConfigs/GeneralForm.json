{
  "panels": [
    {
      "grids": [
        {
          "id": "GeneralFormMainGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('GeneralFormAddGridModal', this)",
              "type": "add",
              "modalId": "GeneralFormAddGridModal"
            }
          ],
          "exportToExcelUrl": "/GlobalFormSuperAdmin/GeneralForm/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/GlobalFormSuperAdmin/GeneralForm/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "GeneralFormEditGridModal",
                "url": "/GlobalFormSuperAdmin/GeneralForm/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/GlobalFormSuperAdmin/GeneralForm/GetById\\', \\'GeneralFormEditGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              },
              {
                "template": "function bindRow (curRow) { return '<a target=\"_blank\" href=\"/General/Form/'+ curRow.name +'?fid='+ curRow.id +'\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-link\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/GlobalFormSuperAdmin/GeneralForm/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "name",
              "caption": "نام",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "setting",
              "caption": "وب سایت",
              "search": {
                "searchType": "dropdown",
                "url": "/GlobalFormSuperAdmin/GeneralForm/GetSiteList",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "modal-xl",
          "id": "GeneralFormAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "name",
              "type": "text",
              "label": "نام",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "siteSettingId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/GlobalFormSuperAdmin/GeneralForm/GetSiteList",
              "label": "وب سایت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "jsonStr",
              "type": "textarea",
              "label": "تنظیمات فرم",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "textarea",
              "label": "توضیحات"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "termT",
              "type": "ck",
              "label": "متن شرایط فرم ({{firstName}} {{lastName}} {{nationalCode}} {{agent}} {{date}} {{time}} {{inputAddress}})"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "rules",
              "type": "file",
              "label": "فایل قوانین",
              "acceptEx": ".pdf,.doc,.docx",
              "hideImagePreview": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "conteractFile",
              "type": "file",
              "label": "متن قرارداد",
              "acceptEx": ".pdf,.doc,.docx",
              "hideImagePreview": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'GeneralFormMainGrid', '/GlobalFormSuperAdmin/GeneralForm/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "modal-xl",
          "id": "GeneralFormEditGridModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "name",
              "type": "text",
              "label": "نام",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "siteSettingId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/GlobalFormSuperAdmin/GeneralForm/GetSiteList",
              "label": "وب سایت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "jsonStr",
              "type": "textarea",
              "label": "تنظیمات فرم",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "textarea",
              "label": "توضیحات"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "termT",
              "type": "ck",
              "label": "متن شرایط فرم ({{firstName}} {{lastName}} {{nationalCode}} {{agent}} {{date}} {{time}} {{inputAddress}})"
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "rules",
              "type": "file",
              "label": "فایل قوانین",
              "acceptEx": ".pdf,.doc,.docx",
              "hideImagePreview": true
            },
            {
              "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
              "name": "conteractFile",
              "type": "file",
              "label": "متن قرارداد",
              "acceptEx": ".pdf,.doc,.docx",
              "hideImagePreview": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'GeneralFormMainGrid', '/GlobalFormSuperAdmin/GeneralForm/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}