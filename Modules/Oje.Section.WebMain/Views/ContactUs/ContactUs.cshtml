@{
    Layout = "_WebLayout";
}

<style>
    .ContactUsSection{
        margin-top:40px;
        margin-bottom:40px;
        background-color:white;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        padding:10px;
    }
    .ContactUsSection > h1 {
        font-size:2em;
        text-align:center;
    }
    .ContactUsSection > h2 {
        font-size:1.5em;
        text-align:center;
        padding-bottom:25px;
    }
</style>

<div class="myContainer">
    <section class="ContactUsSection">
       <h1>@ViewBag.Title</h1>
       <h2>@ViewBag.subTitle</h2>
       <div id="contactUsInputs" class="contactUsInputs"></div>
    </section>
</div>
<script>
    loadJsonConfig('/ContactUs/GetJsonConfig','contactUsInputs');
</script>