{
  "panels": [
    {
      "grids": [
        {
          "id": "ShortLinkGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('ShortLinkAddGridModal', this)",
              "type": "add",
              "modalId": "ShortLinkAddGridModal"
            }
          ],
          "exportToExcelUrl": "/WebMainAdmin/ShortLink/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/WebMainAdmin/ShortLink/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "ShortLinkEditModal",
                "url": "/WebMainAdmin/ShortLink/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/WebMainAdmin/ShortLink/GetById\\', \\'ShortLinkEditModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/WebMainAdmin/ShortLink/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "code",
              "caption": "کد",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "link",
              "caption": "لینک",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "siteTitleMN2",
              "caption": "وب سایت",
              "search": {
                "searchType": "text"
              },
              "showCondation": "cSOW"
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "",
          "id": "ShortLinkAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "code",
              "type": "text",
              "label": "کد",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "link",
              "type": "text",
              "label": "مسیر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'ShortLinkGrid', '/WebMainAdmin/ShortLink/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "",
          "id": "ShortLinkEditModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "code",
              "type": "text",
              "label": "کد",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "link",
              "type": "text",
              "label": "مسیر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'ShortLinkGrid', '/WebMainAdmin/ShortLink/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}