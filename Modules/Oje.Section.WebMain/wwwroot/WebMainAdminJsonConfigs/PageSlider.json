{
  "panels": [
    {
      "grids": [
        {
          "id": "WebMainAdminPageSliderGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('WebMainAdminPageSliderAddGridModal', this)",
              "type": "add",
              "modalId": "WebMainAdminPageSliderAddGridModal"
            }
          ],
          "exportToExcelUrl": "/WebMainAdmin/PageSlider/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/WebMainAdmin/PageSlider/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "WebMainAdminPageSliderEditModal",
                "url": "/WebMainAdmin/PageSlider/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/WebMainAdmin/PageSlider/GetById\\', \\'WebMainAdminPageSliderEditModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/WebMainAdmin/PageSlider/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "page",
              "caption": "عنوان صفحه",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "siteTitleMN2",
              "caption": "وب سایت",
              "search": {
                "searchType": "text"
              },
              "showCondation": "cSOW"
            }
          ]
        }
      ],
      "moduals": [
        {
          "id": "WebMainAdminPageSliderAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "id": "WebMainAdminPageSlidercSOWSiteSettingIdAdd",
              "name": "cSOWSiteSettingId",
              "type": "dropDown2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/GetSettingList",
              "label": "وب سایت",
              "showCondation": "cSOW",
              "ignoreChangeOnBinding": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "pid",
              "type": "dropDown2",
              "textfield": "text",
              "valuefield": "id",
              "dataurl": "/WebMainAdmin/PageSlider/GetPageLightList",
              "label": "صفحه",
              "isRequired": true,
              "exteraParameterIds": [ "WebMainAdminPageSlidercSOWSiteSettingIdAdd" ],
              "ignoreChangeOnBinding": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "mainImage",
              "type": "file",
              "label": "تصویر",
              "acceptEx": ".jpg,.png,.jpeg",
              "compressImage": true,
              "isRequired": true,
              "cropper": true,
              "cropperValidation": {
                "min": 4.5,
                "max": 5.5
              }
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'WebMainAdminPageSliderGrid', '/WebMainAdmin/PageSlider/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "id": "WebMainAdminPageSliderEditModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "id": "WebMainAdminPageSlidercSOWSiteSettingIdEdit",
              "name": "cSOWSiteSettingId",
              "type": "dropDown2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/GetSettingList",
              "label": "وب سایت",
              "showCondation": "cSOW",
              "ignoreChangeOnBinding": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "pid",
              "type": "dropDown2",
              "textfield": "text",
              "valuefield": "id",
              "dataurl": "/WebMainAdmin/PageSlider/GetPageLightList",
              "label": "صفحه",
              "isRequired": true,
              "exteraParameterIds": [ "WebMainAdminPageSlidercSOWSiteSettingIdEdit" ],
              "ignoreChangeOnBinding": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "mainImage",
              "type": "file",
              "label": "تصویر",
              "acceptEx": ".jpg,.png,.jpeg",
              "compressImage": true,
              "isRequired": true,
              "cropper": true,
              "cropperValidation": {
                "min": 4.5,
                "max": 5.5
              }
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'WebMainAdminPageSliderGrid', '/WebMainAdmin/PageSlider/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}