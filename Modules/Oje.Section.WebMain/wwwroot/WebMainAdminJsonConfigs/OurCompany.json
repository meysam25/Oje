{
  "panels": [
    {
      "grids": [
        {
          "id": "WebMainAdminOurCompanyGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('WebMainAdminOurCompanyAddGridModal', this)",
              "type": "add",
              "modalId": "WebMainAdminOurCompanyAddGridModal"
            }
          ],
          "exportToExcelUrl": "/WebMainAdmin/OurCompany/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/WebMainAdmin/OurCompany/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "WebMainAdminOurCompanyEditModal",
                "url": "/WebMainAdmin/OurCompany/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/WebMainAdmin/OurCompany/GetById\\', \\'WebMainAdminOurCompanyEditModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/WebMainAdmin/OurCompany/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "siteTitleMN2",
              "caption": "وب سایت",
              "search": {
                "searchType": "text"
              },
              "showCondation": "cSOW"
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "",
          "id": "WebMainAdminOurCompanyAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "subtitle",
              "type": "text",
              "label": "زیر عنوان"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "url",
              "type": "text",
              "label": "مسیر"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "mainImage",
              "type": "file",
              "label": "تصویر اصلی (300*300)",
              "acceptEx": ".jpg,.png,.jpeg",
              "compressImage": true,
              "isRequired": true,
              "cropper": true,
              "cropperValidation": {
                "min": 0.99,
                "max": 1.01
              }
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'WebMainAdminOurCompanyGrid', '/WebMainAdmin/OurCompany/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "",
          "id": "WebMainAdminOurCompanyEditModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "subtitle",
              "type": "text",
              "label": "زیر عنوان"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "url",
              "type": "text",
              "label": "مسیر"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "mainImage",
              "type": "file",
              "label": "تصویر اصلی (300*300)",
              "acceptEx": ".jpg,.png,.jpeg",
              "compressImage": true,
              "isRequired": true,
              "cropper": true,
              "cropperValidation": {
                "min": 0.99,
                "max": 1.01
              }
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'WebMainAdminOurCompanyGrid', '/WebMainAdmin/OurCompany/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}