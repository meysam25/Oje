{
  "panels": [
    {
      "hasInquiry": false,
      "isAgentRequired": false,
      "isCompanyListRequired": false,
      "id": "ppfPanel",
      "title": "ثبت مناقصه جدید",
      "stepWizards": [
        {
          "lastStepButtonTitle": "ذخیره",
          "lastStepButtonSubbmitUrl": "/Tender/Create",
          "moveBackButtonToTop": true,
          "actionOnLastStep": [
            {
              "actionName": "submitPage",
              "objectId": "ppfPanel",
              "detailesUrl": "/Tender/PdfDetailes",
              "url": "/Tender/Create"
            }
          ],
          "steps": [
            {
              "order": 1,
              "id": "firstStep",
              "title": "اطلاعات بیمه گذار",
              "hideMoveNextButton": true,
              "panels": [
                {
                  "ctrls": [
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "id": "realOrLegaPerson",
                      "type": "dropDown",
                      "textfield": "title",
                      "valuefield": "id",
                      "dataurl": "/Core/BaseData/Get/PersonType",
                      "label": "انتخاب شخص",
                      "name": "realOrLegaPerson",
                      "showHideCondation": [
                        {
                          "value": "",
                          "classHide": [ "legalPerson" ],
                          "isDefault": true
                        },
                        {
                          "value": "1",
                          "classShow": [ "realPerson" ],
                          "classHide": [ "legalPerson" ]
                        },
                        {
                          "value": "2",
                          "classShow": [ "legalPerson" ],
                          "classHide": [ "realPerson" ]
                        }
                      ],
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "mobile",
                      "type": "text",
                      "label": "شماره همراه(نام کاربری)",
                      "isRequired": true,
                      "validations": [
                        {
                          "reg": "^[0-9]*$",
                          "msg": "لطفا فقط عدد وارد کنید"
                        },
                        {
                          "reg": "^([0-9]){11}$",
                          "msg": "شماره همراه باید ۱۱ عدد باشد"
                        },
                        {
                          "reg": "^(09)",
                          "msg": "شماره همراه باید با پیش شماره ۰۹ آغاز شود"
                        }
                      ]
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "nationalCode",
                      "class": "realPerson",
                      "type": "text",
                      "label": "کد ملی",
                      "isRequired": true,
                      "nationalCodeValidation": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "agentNationalCode",
                      "class": "legalPerson",
                      "type": "text",
                      "label": "شناسه ملی",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "class": "realPerson",
                      "name": "firstName",
                      "type": "text",
                      "label": "نام",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "class": "legalPerson",
                      "name": "firstAgentName",
                      "type": "text",
                      "label": "نام نماینده",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "lastName",
                      "class": "realPerson",
                      "type": "text",
                      "label": "نام خانوادگی",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "lastAgentName",
                      "class": "legalPerson",
                      "type": "text",
                      "label": "نام خانوادگی نماینده",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "companyName",
                      "class": "legalPerson",
                      "type": "text",
                      "label": "نام شرکت",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "email",
                      "type": "text",
                      "label": "ایمیل",
                      "validations": [
                        {
                          "reg": "^\\S+@\\S+\\.\\S+$",
                          "msg": "ایمیل وارد شده صحیح نمی باشد"
                        }
                      ]
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "tell",
                      "type": "text",
                      "label": "تلفن ثابت",
                      "validations": [
                        {
                          "reg": "^[0-9]*$",
                          "msg": "لطفا فقط عدد وارد کنید"
                        }
                      ]
                    },
                    {
                      "parentCL": "col-md-4 col-sm-6 col-xs-12 col-lg-3",
                      "name": "postalCode",
                      "type": "text",
                      "label": "کد پستی",
                      "validations": [
                        {
                          "reg": "^[0-9]*$",
                          "msg": "لطفا فقط عدد وارد کنید"
                        },
                        {
                          "reg": "^([0-9]){10}$",
                          "msg": "کد پستی باید ۱۰ عدد باشد"
                        }
                      ]
                    },
                    {
                      "parentCL": "col-md-9 col-sm-9 col-xs-12 col-lg-9",
                      "name": "address",
                      "type": "text",
                      "label": "آدرس",
                      "isRequired": true
                    },
                    {
                      "parentCL": "col-md-3 col-sm-3 col-xs-12 col-lg-3 ",
                      "showHideClass": "normalInquiry",
                      "class": "btn-primary btn-block ",
                      "type": "button",
                      "title": "تایید اطلاعات بیمه گذار",
                      "onClick": "moveToNextStepForSW(this)"
                    }
                  ]
                }
              ]
            },
            {
              "order": 2,
              "id": "insuranceInfoStep",
              "title": "اطلاعات بیمه",
              "panels": [
                {
                  "ctrls": [
                    {
                      "parentCL": "col-md-12 col-sm-12 col-xs-12 col-lg-12",
                      "class": "damageBox hasPrevInsurance",
                      "type": "multiRowInput",
                      "name": "tenderInsurance",
                      "ctrls": [
                        {
                          "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
                          "name": "insuranceCatId",
                          "type": "dropDown",
                          "textfield": "title",
                          "valuefield": "id",
                          "dataurl": "/Tender/GetCategoryList",
                          "label": "گروه بندی"
                        },
                        {
                          "parentCL": "col-xl-4 col-lg-4 col-md-4 col-sm-6 col-xs-12",
                          "name": "fid",
                          "type": "dropDown2",
                          "textfield": "text",
                          "valuefield": "id",
                          "dataurl": "/Tender/GetProposalFormList",
                          "exteraParameterIds": [ "insuranceCatId" ],
                          "exteraParameterIdsEndWith": true,
                          "label": "فرم پیشنهاد",
                          "isRequired": true,
                          "ignoreOnChange": true,
                          "onChange": "loadJsonForPPF(\"{{currentIdHolder}}\")"
                        },
                        {
                          "parentCL": "col-md-12 col-sm-12 col-xs-12 col-lg-12 holderDynamicSW",
                          "type": "empty"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "order": 8,
              "id": "condations",
              "title": "شرایط عمومی",
              "hideMoveNextButton": true,
              "panels": [
                {
                  "ctrls": [
                    {
                      "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
                      "type": "cTemplate",
                      "fieldMaps": [
                        {
                          "targetTemplate": "title",
                          "sourceCtrl": [
                            "title"
                          ]
                        }
                      ],
                      "dataurl": "/Tender/GetTermsHtml"
                    },
                    {
                      "parentCL": "col-md-9 col-sm-9 col-xs-12 col-lg-9 ",
                      "type": "empty"
                    },
                    {
                      "parentCL": "col-md-3 col-sm-3 col-xs-12 col-lg-3 ",
                      "showHideClass": "normalInquiry",
                      "class": "btn-primary btn-block lastStepButton",
                      "type": "button",
                      "title": "تایید اطلاعات و ثبت",
                      "onClick": ""
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}