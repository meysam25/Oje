{
  "panels": [
    {
      "grids": [
        {
          "id": "BankAccountGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('BankAccountAddGridModal', this)",
              "type": "add",
              "modalId": "BankAccountAddGridModal"
            }
          ],
          "exportToExcelUrl": "/FinancialBaseData/BankAccount/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/FinancialBaseData/BankAccount/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "BankAccountModal",
                "url": "/FinancialBaseData/BankAccount/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/FinancialBaseData/BankAccount/GetById\\', \\'BankAccountModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/FinancialBaseData/BankAccount/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "bankId",
              "caption": "بانک",
              "search": {
                "searchType": "dropdown",
                "url": "/FinancialBaseData/BankAccount/GetBankList",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "userfullanme",
              "caption": "نام کاربر",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "cardNo",
              "caption": "شماره کارت",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "hesabNo",
              "caption": "شماره حساب",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "modal-xl",
          "id": "BankAccountAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "bankId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/FinancialBaseData/BankAccount/GetBankList",
              "label": "بانک",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "cardNo",
              "type": "text",
              "label": "شماره کارت (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "shabaNo",
              "type": "text",
              "label": "شماره شبا (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "hesabNo",
              "type": "text",
              "label": "شماره حساب (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "userId",
              "type": "dropDown2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/FinancialBaseData/BankAccount/GetUsers",
              "label": "کاربر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isForPayment",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "درگاه؟"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'BankAccountGrid', '/FinancialBaseData/BankAccount/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "modal-xl",
          "id": "BankAccountModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "bankId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/FinancialBaseData/BankAccount/GetBankList",
              "label": "بانک",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "cardNo",
              "type": "text",
              "label": "شماره کارت (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "shabaNo",
              "type": "text",
              "label": "شماره شبا (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "hesabNo",
              "type": "text",
              "label": "شماره حساب (فقط عدد)",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "userId",
              "type": "dropDown2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/FinancialBaseData/BankAccount/GetUsers",
              "label": "کاربر",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isForPayment",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "درگاه؟"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'BankAccountGrid', '/FinancialBaseData/BankAccount/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}