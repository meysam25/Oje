            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "cssClass",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/BootstrapClass",
              "label": "کلاس"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
