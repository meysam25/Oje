{
  "panels": [
    {
      "grids": [
        {
          "id": "roleGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('AddGridModal', this)",
              "type": "add",
              "modalId": "AddGridModal"
            }
          ],
          "showColumnConfigButton": true,
          "exportToExcelUrl": "/Account/RoleManager/Export",
          "actions": {
            "delete": {
              "url": "/Account/RoleManager/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "editRoleModal",
                "url": "/Account/RoleManager/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/Account/RoleManager/GetById\\', \\'editRoleModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              },
              {
                "type": "newLink",
                "url": "/Account/RoleManagerAccess/Index?id=",
                "icon": "fa-key",
                "prop": "id",
                "template": "function bindRow (curRow) { return '<a target=\"_blank\" href=\"/Account/RoleManagerAccess/Index?id='+ curRow.id +'\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-key\" ></i></a>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/Account/RoleManager/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "name",
              "caption": "نام",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "value",
              "caption": "مقدار",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "siteSetting",
              "caption": "وب سایت",
              "search": {
                "searchType": "dropdown",
                "url": "/Account/RoleManager/GetSettingList",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "userCount",
              "caption": "تعداد کاربر"
            }
          ]
        }
      ],
      "moduals": [
        {
          "id": "AddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "name",
              "type": "text",
              "label": "نام"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "value",
              "type": "text",
              "label": "مقدار"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "disabledOnlyMyStuff",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/YesOrNo",
              "label": "غیر فعال کردن (فقط موارد خودم و زیر مجموعه)"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/RoleType",
              "label": "نوع"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "sitesettingId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Account/RoleManager/GetSettingList",
              "label": "تنظیمات"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "formIds",
              "type": "tokenBox2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Account/RoleManager/GetProposalFormList",
              "label": "فرم های پیشنهاد"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'roleGrid', '/Account/RoleManager/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "id": "editRoleModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "name",
              "type": "text",
              "label": "نام"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "value",
              "type": "text",
              "label": "مقدار"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "disabledOnlyMyStuff",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/YesOrNo",
              "label": "غیر فعال کردن (فقط موارد خودم و زیر مجموعه)"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/RoleType",
              "label": "نوع"
            },
            {
              "parentCL": "col-md-12 col-sm-12 col-lg-12 col-xl-12 col-xs-12",
              "name": "sitesettingId",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Account/RoleManager/GetSettingList",
              "label": "تنظیمات"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "formIds",
              "type": "tokenBox2",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Account/RoleManager/GetProposalFormList",
              "label": "فرم های پیشنهاد"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'roleGrid', '/Account/RoleManager/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}