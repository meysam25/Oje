{
  "panels": [
    {
      "grids": [
        {
          "id": "ValidRangeIpMainGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('ValidRangeIpAddGridModal', this)",
              "type": "add",
              "modalId": "ValidRangeIpAddGridModal"
            },
            {
              "type": "downloadFile",
              "title": "دانلود فایل نمونه",
              "onClick": "window.open('/Modules/ValidRangeIpExcelExample/ips.xlsx');"
            },
            {
              "title": "افزودن (فایل اکسل)",
              "onClick": "uploadFile('excelFile','.xlsx', '/Security/ValidRangeIp/CreateFromXcel', this)"
            }
          ],
          "exportToExcelUrl": "/Security/ValidRangeIp/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/Security/ValidRangeIp/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "ValidRangeIpEditGridModal",
                "url": "/Security/ValidRangeIp/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/Security/ValidRangeIp/GetById\\', \\'ValidRangeIpEditGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/Security/ValidRangeIp/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "fromIp",
              "caption": "از ای پی",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "toIp",
              "caption": "تا ای پی",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "",
          "id": "ValidRangeIpAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "fromIp",
              "type": "text",
              "label": "از ای پی",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "toIp",
              "type": "text",
              "label": "تا ای پی",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'ValidRangeIpMainGrid', '/Security/ValidRangeIp/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "",
          "id": "ValidRangeIpEditGridModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "fromIp",
              "type": "text",
              "label": "از ای پی",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "toIp",
              "type": "text",
              "label": "تا ای پی",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "ذخیره",
              "onClick": "postModalData(this, 'ValidRangeIpMainGrid', '/Security/ValidRangeIp/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}