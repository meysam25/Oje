@model List<Oje.PaymentService.Models.View.BankAccountPaymentUserVM>

<style>
    html{
        height:100%;
    }
    body {
        height:90%;
        
    }
    .bankGWItem {
        width: 300px;
        margin-left: 5px;
        margin-right: 5px;
        display: inline-block;
        border: 1px solid silver;
        padding: 10px;
        border-radius: 4px;
        direction:rtl;
    }

        .bankGWItem > img {
            float: right;
            width: 100px;
            border-radius: 50%;
            border: 1px solid silver;
            margin-left: 10px;
        }

    .bankTitle {
        padding-top: 10px;
        font-weight:bold;
    }

    .bankTitle, .accTitle, .userFullname, .price {
        display: block;
        padding-right: 10px;
        padding-bottom: 5px;
        text-align: right;
    }

    .payButton {
        color: white;
        background-color: #03d203;
        border-radius: 4px;
        border: 1px solid #009800;
        display: block;
        width: 100%;
        margin-top: 10px;
        padding: 5px;
        font-size: 14pt;
        cursor:pointer;
    }
    .holderItems{
        width:95%;text-align:center;display:flex;
        align-items: center;
        justify-content: center;
        min-height:100%;
        flex-direction:column;
    }
</style>


<div class="holderItems">
    <div style="font-weight:bold;color:red;font-size:25px;padding:10px;" >@ViewBag.lastErrorMessage</div>
    @{
        if (Model != null && Model.Count > 0)
        {
            foreach (var payItem in Model)
            {
                <form class="bankGWItem" action="/Payment/Payment/CreateFactor" method="post">
                    <input type="hidden" name="id" value="@(payItem.bankAccountId)" />
                    <input type="hidden" name="status" value="@(ViewBag.status)" />
                    <img src="@(payItem.bankIcon)" />
                    <span class="bankTitle">@(payItem.bankTitle)</span>
                    <span class="accTitle">@(payItem.accountTitle)</span>
                    <span class="userFullname">@(payItem.userFullname)</span>
                    <span class="price">@(ViewBag.price)</span>
                    <span style="display:block;clear:both;"></span>
                    <button type="submit" class="payButton">پرداخت</button>
                </form>
            }
        }
    }
</div>

