{
  "panels": [
    {
      "grids": [
        {
          "id": "UserMainGrid",
          "exportToExcelUrl": "/Signature/User/Export",
          "showColumnConfigButton": true,
          "actions": {
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "UserEditGridModal",
                "url": "/Signature/User/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/Signature/User/GetById\\', \\'UserEditGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/Signature/User/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "id",
              "caption": "شناسه",
              "sort": true,
              "width": "100px",
              "textAlign": "center",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "username",
              "sort": true,
              "caption": "نام کاربری",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "firstname",
              "sort": true,
              "caption": "نام",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "lastname",
              "sort": true,
              "caption": "نام خانوادگی",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "nationalCode",
              "sort": true,
              "caption": "کد ملی",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "createDate",
              "sort": true,
              "caption": "تاریخ ایجاد",
              "search": {
                "searchType": "persianDateTime"
              }
            },
            {
              "field": "isActive",
              "sort": true,
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "isDelete",
              "sort": true,
              "caption": "حذف",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/YesOrNo",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "website",
              "sort": true,
              "caption": "وب سایت",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isValid",
              "caption": "مجاز"
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "modal-xl",
          "id": "UserEditGridModal",
          "title": "مشاهده",
          "ctrls": [
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "textarea",
              "label": "متن خطا",
              "ltr": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            }
          ]
        }
      ]
    }
  ]
}