{
  "panels": [
    {
      "grids": [
        {
          "id": "UploadedFileMainGrid",
          "exportToExcelUrl": "/Signature/UploadedFile/Export",
          "showColumnConfigButton": true,
          "actions": {
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "UploadedFileEditGridModal",
                "url": "/Signature/UploadedFile/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal(\\''+ curRow.id +'\\', \\'/Signature/UploadedFile/GetById\\', \\'UploadedFileEditGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/Signature/UploadedFile/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "id",
              "caption": "شناسه",
              "sort": true,
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "ft",
              "caption": "نوع فایل",
              "sort": true,
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/FileType",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "rAccess",
              "caption": "دسترسی",
              "sort": true,
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/YesOrNo",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "user",
              "caption": "کاربر",
              "sort": true,
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "fct",
              "caption": "نوع محتوی فایل",
              "sort": true,
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "fs",
              "caption": "اندازه",
              "sort": true,
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "website",
              "sort": true,
              "caption": "وب سایت",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "isValid",
              "caption": "مجاز"
            }
          ]
        }
      ],

      "moduals": [
        {
          "class": "modal-xl",
          "id": "UploadedFileEditGridModal",
          "title": "مشاهده",
          "ctrls": [
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "textarea",
              "label": "متن خطا",
              "ltr":  true 
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            }
          ]
        }
      ]
    }
  ]
}