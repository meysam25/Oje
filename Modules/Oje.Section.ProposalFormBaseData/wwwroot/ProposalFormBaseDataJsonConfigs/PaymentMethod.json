{
  "panels": [
    {
      "grids": [
        {
          "id": "PaymentMethoduserGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('PaymentMethodAddGridModal', this)", "type": "add", "modalId": "PaymentMethodAddGridModal"
            }
          ],
          "exportToExcelUrl": "/ProposalFormBaseData/PaymentMethod/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/ProposalFormBaseData/PaymentMethod/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "PaymentMethodEditModal",
                "url": "/ProposalFormBaseData/PaymentMethod/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/ProposalFormBaseData/PaymentMethod/GetById\\', \\'PaymentMethodEditModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/ProposalFormBaseData/PaymentMethod/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "comId",
              "caption": "شرکت بیمه",
              "search": {
                "searchType": "dropdown",
                "url": "/ProposalFormBaseData/PaymentMethod/GetCompanyList",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "form",
              "caption": "فرم پیشنهاد",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "type",
              "caption": "نوع",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/PaymentMethodType",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "class": "modal-xl",
          "id": "PaymentMethodAddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "comIds",
              "type": "tokenBox",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/ProposalFormBaseData/PaymentMethod/GetCompanyList",
              "label": "شرکت",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "formId",
              "type": "dropDown2",
              "textfield": "text",
              "valuefield": "id",
              "dataurl": "/ProposalFormBaseData/PaymentMethod/GetProposalFormList",
              "label": "فرم پیشنهاد",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
