{
  "panels": [
    {
      "grids": [
        {
          "id": "mainGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('addGridModal', this)", "type": "add", "modalId": "addGridModal"
            }
          ],
          "exportToExcelUrl": "/MessengerBaseData/SmsTemplate/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/MessengerBaseData/SmsTemplate/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "editGridModal",
                "url": "/MessengerBaseData/SmsTemplate/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/MessengerBaseData/SmsTemplate/GetById\\', \\'editGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/MessengerBaseData/SmsTemplate/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "type",
              "caption": "نوع",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/UserNotificationType",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "subject",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "id": "addGridModal",
          "class": "modal-xl",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/UserNotificationType",
              "label": "نوع",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "subject",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "text",
              "label": "توضیحات {{datetime}},{{fromUser}},{{toUser}},{{objectId}},{{title}}",
              "isRequired": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'mainGrid', '/MessengerBaseData/SmsTemplate/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "id": "editGridModal",
          "class": "modal-xl",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/UserNotificationType",
              "label": "نوع",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-12",
              "name": "subject",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "description",
              "type": "text",
              "label": "توضیحات {{datetime}},{{fromUser}},{{toUser}},{{objectId}},{{title}}",
              "isRequired": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'mainGrid', '/MessengerBaseData/SmsTemplate/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}