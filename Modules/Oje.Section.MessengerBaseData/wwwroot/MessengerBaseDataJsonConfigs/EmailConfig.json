{
  "panels": [
    {
      "grids": [
        {
          "id": "mainGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('addGridModal', this)",
              "type": "add",
              "modalId": "addGridModal"
            }
          ],
          "exportToExcelUrl": "/MessengerBaseData/EmailConfig/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/MessengerBaseData/EmailConfig/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "editGridModal",
                "url": "/MessengerBaseData/EmailConfig/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/MessengerBaseData/EmailConfig/GetById\\', \\'editGridModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/MessengerBaseData/EmailConfig/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "title",
              "caption": "عنوان",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "eUsername",
              "caption": "نام کاربری",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "smtpPort",
              "caption": "پورت",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "smtpHost",
              "caption": "هاست",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "timeout",
              "caption": "زمان انصراف",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "enableSsl",
              "caption": "اس اس ال",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "isActive",
              "caption": "وضعیت",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/IsActive",
                "textField": "title",
                "valueField": "id"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "id": "addGridModal",
          "title": "افزودن",
          "class": "modal-xl",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "eUsername",
              "type": "text",
              "label": "نام کاربری",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "ePassword",
              "type": "password",
              "label": "کلمه عبور",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "smtpPort",
              "type": "text",
              "label": "پورت",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "smtpHost",
              "type": "text",
              "label": "هاست",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "timeout",
              "type": "text",
              "label": "زمان انصراف",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "enableSsl",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "اس اس ال"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "useDefaultCredentials",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "Use Default Credentials"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'mainGrid', '/MessengerBaseData/EmailConfig/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "id": "editGridModal",
          "title": "ویرایش",
          "class": "modal-xl",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "title",
              "type": "text",
              "label": "عنوان",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "eUsername",
              "type": "text",
              "label": "نام کاربری",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "ePassword",
              "type": "password",
              "label": "کلمه عبور"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "smtpPort",
              "type": "text",
              "label": "پورت",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "smtpHost",
              "type": "text",
              "label": "هاست",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "timeout",
              "type": "text",
              "label": "زمان انصراف",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "enableSsl",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "اس اس ال"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "useDefaultCredentials",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "Use Default Credentials"
            },
            {
              "parentCL": "col-xl-3 col-lg-3 col-md-4 col-sm-6 col-xs-12",
              "name": "isActive",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/IsActive",
              "label": "وضعیت"
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'mainGrid', '/MessengerBaseData/EmailConfig/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}