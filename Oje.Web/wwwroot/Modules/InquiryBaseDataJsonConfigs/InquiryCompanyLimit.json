{
  "panels": [
    {
      "grids": [
        {
          "id": "userGrid",
          "topActions": [
            {
              "title": "افزودن",
              "onClick": "showModal('AddGridModal', this)", "type": "add", "modalId": "AddGridModal"
            }
          ],
          "exportToExcelUrl": "/InquiryBaseData/InquiryCompanyLimit/Export",
          "showColumnConfigButton": true,
          "actions": {
            "delete": {
              "url": "/InquiryBaseData/InquiryCompanyLimit/Delete"
            },
            "cActions": [
              {
                "type": "edit",
                "icon": "fa-pen",
                "prop": "id",
                "modalId": "editRoleModal",
                "url": "/InquiryBaseData/InquiryCompanyLimit/GetById",
                "template": "function bindRow (curRow) { return '<span onclick=\"showEditModal('+ curRow.id +', \\'/InquiryBaseData/InquiryCompanyLimit/GetById\\', \\'editRoleModal\\' , this)\" style=\"display:block;\" ><i style=\"color:white!important;\" class=\"fa fa-pen\" ></i></span>' };bindRow(data)"
              }
            ]
          },
          "key": "id",
          "url": "/InquiryBaseData/InquiryCompanyLimit/GetList",
          "itemPerPage": 10,
          "schema": {
            "data": "data",
            "total": "total"
          },
          "columns": [
            {
              "field": "row",
              "caption": "ردیف",
              "width": "50px",
              "textAlign": "center"
            },
            {
              "field": "comId",
              "caption": "شرکت",
              "search": {
                "searchType": "dropdown",
                "url": "/InquiryBaseData/InquiryCompanyLimit/GetCompanyList",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "type",
              "caption": "نوع",
              "search": {
                "searchType": "dropdown",
                "url": "/Core/BaseData/Get/InquiryCompanyLimitType",
                "textField": "title",
                "valueField": "id"
              }
            },
            {
              "field": "createUser",
              "caption": "کاربر ایجاد کننده",
              "search": {
                "searchType": "text"
              }
            },
            {
              "field": "createDate",
              "caption": "تاریخ ایجاد",
              "search": {
                "searchType": "persianDateTime"
              }
            }
          ]
        }
      ],
      "moduals": [
        {
          "id": "AddGridModal",
          "title": "افزودن",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/InquiryCompanyLimitType",
              "label": "نوع",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "comIds",
              "type": "tokenBox",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/InquiryBaseData/InquiryCompanyLimit/GetCompanyList",
              "label": "شرکت بیمه",
              "isRequired": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'userGrid', '/InquiryBaseData/InquiryCompanyLimit/Create')",
              "class": "btn-primary"
            }
          ]
        },
        {
          "class": "modal-xl",
          "id": "editRoleModal",
          "title": "ویرایش",
          "ctrls": [
            {
              "name": "id",
              "type": "hidden"
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "type",
              "type": "dropDown",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/Core/BaseData/Get/InquiryCompanyLimitType",
              "label": "نوع",
              "isRequired": true
            },
            {
              "parentCL": "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12",
              "name": "comIds",
              "type": "tokenBox",
              "textfield": "title",
              "valuefield": "id",
              "dataurl": "/InquiryBaseData/InquiryCompanyLimit/GetCompanyList",
              "label": "شرکت بیمه",
              "isRequired": true
            }
          ],
          "actions": [
            {
              "title": "بستن",
              "onClick": "closeThisModal(this)",
              "class": "btn-secondary"
            },
            {
              "title": "دخیره",
              "onClick": "postModalData(this, 'userGrid', '/InquiryBaseData/InquiryCompanyLimit/Update')",
              "class": "btn-primary"
            }
          ]
        }
      ]
    }
  ]
}